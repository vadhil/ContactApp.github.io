
<div class="container">
    <div class="row justify-content-center">
        <div class="col-8 col-md-4 ">
          <% if (typeof errors !== "undefined") { %>
            
                <% errors.forEach(error => { %>
                  <div class="alert alert-danger" role="alert">
                    <%= error.msg %>
                    </div>
                <% }) %>
                
           
            
          <% } %>
         
            <form method="POST" action="/update/<%= contact[0].name %>">
                <div class="mb-3">
                    <label for="name" class="form-label">name</label>
                    <input value="<%= contact[0].name %>" type="text" class="form-control" id="name" name="name" required >
                </div>
                <div class="mb-3">
                  <label for="phone" class="form-label">handphone</label>
                  <input value="<%= contact[0].phone %>" type="number" class="form-control" id="phone" name="phone"  required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">email</label>
                    <input value="<%= contact[0].email %>" type="email" class="form-control" id="email" name="email" required>
                  </div>
                
                <button type="submit" class="text-center justify-items-center btn btn-dark text-warning" value="add">Update</button>
              </form>

        </div>
    </div>
  </div>